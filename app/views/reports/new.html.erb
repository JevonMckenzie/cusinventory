<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>Request Item</h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home"></i>Home Page</a></li>
          <li class="active">Request report</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">

    
      
              

    
   

         <a href="<%= reports_path %>">
          <i class="fa fa-user-plus"></i>
          <span>Outstanding Requisitions</span>
        </a>
        &nbsp;
        <a href="<%= requisitions_path %>">
          <i class="fa fa-user-plus"></i>
          <span>All Requisitions</span>
        </a>
      
    
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>

              <!-- /.box-header -->
              <!-- form start -->

              <%= form_for @report do |f| %>
                <% if @report.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@report.errors.count, 'error') %> prohibited this item from being saved:</h2>
                    <ul>
                      <% @report.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="box-body">

      

                	   <div class="form-group">
                    <label>Username</label>
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', required: true, value: current_user.email, readonly: true %>
                  </div>
           
                             <div class="form-group">
                    <label>Section Name</label>
                    <%= f.select(:station, [["Select Section","BELIZE CITY - RECORDS","BELIZE CITY - RECORDS","BELIZE CITY -CMIS","BELIZE CITY -CMIS"],["COROZAL-CARGO","COROZAL-CARGO"], ["COROZAL - PASSENGER","COROZAL - PASSENGER"], ["COROZAL - CIU","COROZAL - CIU"], ["BENQUE - CARGO","BENQUE - CARGO"], ["BENQUE - PASSENGER","BENQUE - PASSENGER"],["PUNTA GORDA","PUNTA GORDA"],["BIG CREEK","BIG CREEK"],["DANGRIGA","DANGRIGA"],["SAN PEDRO","SAN PEDRO"],["BELIZE CITY - PORT","BELIZE CITY - PORT"],["BELIZE CITY - VALUATION","BELIZE CITY - VALUATION"],["BELIZE CITY - RECORDS","BELIZE CITY - RECORDS"],["BELIZE CITY - SHIPPING","BELIZE CITY - SHIPPING"],["BELIZE CITY - EXAMINATION","BELIZE CITY - EXAMINATION"],["BELIZE CITY - CASHIER","BELIZE CITY - CASHIER"],["BELIZE CITY - ACCOUNTS","BELIZE CITY - ACCOUNTS"],["BELIZE CITY - TRAINING","BELIZE CITY - TRAINING"],["BELIZE CITY - LEGAL SECTION","BELIZE CITY - LEGAL SECTION"],["BELIZE CITY - COMPTROLLER","BELIZE CITY - COMPTROLLER"],["DEPUTY COMPTROLLER","DEPUTY COMPTROLLER"],["BELIZE CITY - POST AUDIT","BELIZE CITY - POST AUDIT"],["BELIZE CITY - EXCISE","BELIZE CITY - EXCISE"],["BELIZE CITY - PRIVATE WAREHOUSE","BELIZE CITY - PRIVATE WAREHOUSE"],["BELIZE CITY - ENFORCEMENT","BELIZE CITY - ENFORCEMENT"],["BELIZE CITY- SECURITY","BELIZE CITY- SECURITY"],["TOURIST VILLAGE","TOURIST VILLAGE"],["POST OFFICE","POST OFFICE"],["PGIA - CARGO","PGIA - CARGO"],["PGIA - PASSENGER","PGIA - PASSENGER"],["ORANGE WALK","ORANGE WALK"],["BELIZE CITY - TRADE","BELIZE CITY - TRADE"],["BELIZE CITY - RISK MANAGEMENT","BELIZE CITY - RISK MANAGEMENT"],["BELIZE CITY - QBOND SHED","BELIZE CITY - QBOND SHED"]], {}, { :class => 'form-control' })%>
                  </div>
                  
                 
                <!-- /.box-body -->
                <div class="box-footer">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $(document).ready(function () {
        $.widget.bridge('uibutton', $.ui.button);
        $('.datepicker').datepicker({format: 'yyyy/mm/dd'});
      });
    </script>
  </div>
</body>
