<%= render 'layouts/header' %>
<body class="skin-blue sidebar-mini">
  

  <div class="content-wrapper">
    <div class="content">
      <p id="notice"><%= notice %></p>

      <div class="row">
        <div class="col-xs-12">
          <!-- Main data table -->
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive fix-table-height">
                <table id="example1" class="table-bordered table-striped text-center table">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Date In</th>
                      <th>Time In</th>
                      <th>Rot#</th>
                      <th>License Plate In</th>
                      <th>Vehicle Model</th>
                      <th>Vehicle Color</th>
                      <th>Driver Name</th>
                      <th>Owner</th>
                      <th>Goods Description</th>
                      <th>Vin</th>
                      <th>Destination</th>
                      <th>Entry</th>
                      <th>License Plate Out</th>
                      <th>Date Out</th>
                      <th>Time Out</th>
                      <th>Issuing Officer</th>
                      <th>Clearing Officer</th>
                      <th>Clear Importer</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @border_rot_imports.each do |border_rot_imports| %>
                    <tr>
                      <td><%= border_rot_imports.id %></td>
                      <td><%= border_rot_imports.date_time_in.strftime("%F") %></td>
                      <td><%= border_rot_imports.date_time_in.strftime("%T") %></td>
                      <td><%= border_rot_imports.rot_num %></td>
                      <td><%= border_rot_imports.license_plate_in %></td>
                      <td><%= border_rot_imports.vehicle_description %></td>
                      <td><%= border_rot_imports.vehicle_color %></td>
                      <td><%= border_rot_imports.driver_name %></td>
                      <td><%= border_rot_imports.owner %></td>
                      <td><%= border_rot_imports.goods_description %></td>
                      <td><%= border_rot_imports.vin %></td>
                      <td><%= border_rot_imports.destination %></td>
                      
                      <td><%= border_rot_imports.entry ||= "---" %></td>
                      <td><%= border_rot_imports.license_plate_out ||= "---" %></td>
                      <td><%= border_rot_imports.date_time_out ||= "---" %></td>
                      <td><%= border_rot_imports.date_time_out ||= "---" %></td>
                      <% if border_rot_imports.issuing_officer%>
                          <td><%= border_rot_imports.issuing_officer_name%></td>
                          <%else%>
                          <td>---</td>
                        <%end%>
                        <% if border_rot_imports.clearance_officer%>
                          <td><%= border_rot_imports.clearance_officer_name%></td>
                          <%else%>
                          <td>---</td>
                        <%end%>
                        <% if border_rot_imports.clearance_officer %>
                          <td>Cleared</td>
                        <% else %>
                          <td><%= link_to "Clear Importer", edit_border_rot_import_path(border_rot_imports) %></td>
                        <% end %>

                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'New Border Rot Import', new_border_rot_import_path %>
  <script>
    $(function () {
      $("#example1").DataTable({
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": true
      });
    });
  </script>
</body>
