<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>Request Toner</h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home"></i>Home Page</a></li>
          <li class="active">Request Tonerr</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for @toner do |f| %>
                <% if @toner.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@toner.errors.count, 'error') %> prohibited this item from being saved:</h2>
                    <ul>
                      <% @toner.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="box-body">
                	   <div class="form-group">
                    <label>Username</label>
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', required: true %>
                  </div>
                  	   <div class="form-group">
                    <label>Section Name</label>
                    <%= f.text_field :sectionname, class: 'form-control', placeholder: 'Enter Section Name', required: true %>
                  </div>
                  	   <div class="form-group">
                    <label>Request Date</label>
                    <%= f.date_field :requestdate, class: 'form-control', placeholder: 'Enter Request Date', required: true %>
                  </div>
                 
                    <div class="form-group">
                    <label>Toner Name</label>
                    <%= f.text_field :tonername, class: 'form-control', placeholder: 'Enter Toner Name', required: true %>
                  </div>
                 
                  <div class="form-group">
                    <label>Quantity</label>
                    <%= f.number_field :quantity, class: 'form-control', placeholder: 'Enter Quantity', required: true %>
                  </div>
                 
                <!-- /.box-body -->
                <div class="box-footer">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $(document).ready(function () {
        $.widget.bridge('uibutton', $.ui.button);
        $('.datepicker').datepicker({format: 'yyyy/mm/dd'});
      });
    </script>
  </div>
</body>
