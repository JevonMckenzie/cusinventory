<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>Request Toner</h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home"></i>Home Page</a></li>
          <li class="active">Request Tonerr</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">

    
      
              

    
   

         <a href="<%= toners_path %>">
          <i class="fa fa-user-plus"></i>
          <span>Outstanding Requisitions</span>
        </a>
        &nbsp;
        <a href="<%= requisitions_path %>">
          <i class="fa fa-user-plus"></i>
          <span>All Toner Requisitions</span>
        </a>
      
    
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>

              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for @toner do |f| %>
                <% if @toner.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@toner.errors.count, 'error') %> prohibited this item from being saved:</h2>
                    <ul>
                      <% @toner.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="box-body">
                       <div class="form-group">
                    <label>Requisition Number</label>
                    <%= f.text_field :requisitionnumber, :value => Toner.last.requisitionnumber + 1, :readonly => true %>
                  </div>
                	   <div class="form-group">
                    <label>Username</label>
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', required: true, value: current_user.email, readonly: true %>
                  </div>
                     <div class="form-group">
                    <label>User Assigned Station</label>
                    <%= f.text_field :stationname, class: 'form-control', required: true, value: current_user.stationname, readonly: true %>
                  </div>
                  	   <div class="form-group">
                    <label>Section Name</label>
                    <%= f.select(:sectionname, [["Select Station/Section","Corozal-Cargo","Corozal-Passenger"],["Benque-Cargo","Benque-Cargo"], ["Benque-Passenger","Benque-Passenger"], ["San-Pedro","San-Pedro"], ["Toledo","Toledo"], ["Big Creek","Big Creek"],["Orange Walk","Orange Walk"],["Dangriga","Dangriga"],["BZ CMIS","BZ CMIS"],["BZ Shipping","BZ Shipping"],["BZ Valuation","BZ Valuation"],["BZ Risk Management","BZ Risk Management"],["BZ Trade","BZ Trade"],["BZ Queens Bond","BZ Queens Bond"],["BZ Port","BZ Port"],["BZ Training","BZ Training"],["BZ Deputy Gordon Office","BZ Deputy Gordon Office"],["Comproller Office","Comproller Office"],["Legal Council","Legal Council"],["Internal Auditor","Internal Auditor"],["Excise","Excise"],["Post Audit","Post Audit"],["Accounts","Accounts"],["Records","Records"],["Investigation","Investigation"],["Private Warehouse","Private Warehouse"],["Add Item","Add Item"],["Add Item","Add Item"],["Add Item","Add Item"],["Add Item","Add Item"],["Add Item","Add Item"],["Add Item","Add Item"],["Add Item","Add Item"]], {}, { :class => 'form-control' })%>
                  </div>
                  	   <div class="form-group">
                    <label>Request Date</label>
                    <%= f.date_field :requestdate, class: 'form-control', placeholder: 'Enter Request Date', required: true, readonly:true, :value => Time.now.strftime('%Y-%m-%d') %>
                  </div>
                 
                    <div class="form-group">
                    <label>Toner Name</label>
                    <%= f.text_field :tonername, class: 'form-control', placeholder: 'Enter Toner Name', required: true %>
                  </div>
                 
                  <div class="form-group">
                    <label>Quantity</label>
                    <%= f.number_field :quantity, class: 'form-control', placeholder: 'Enter Quantity', required: true %>
                  </div>
                 
                <!-- /.box-body -->
                <div class="box-footer">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $(document).ready(function () {
        $.widget.bridge('uibutton', $.ui.button);
        $('.datepicker').datepicker({format: 'yyyy/mm/dd'});
      });
    </script>
  </div>
</body>
