<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Passwordreset</th>
      <th>Unblockemail</th>
      <th>Newuser</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.passwordreset %></td>
        <td><%= email.unblockemail %></td>
        <td><%= email.newuser %></td>
        <td><%= email.firstname %></td>
        <td><%= email.lastname %></td>
        <td><%= email.email %></td>
        <td><%= email.reason %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

