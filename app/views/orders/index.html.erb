
<html>

<head>
<title> Customs IT Inventory</title>


<style type="text/css">
@media print
{
body {
            margin: 5px;
        }

        .body.{
            padding-top: 0px;
        }

        .no-print {
            display: none;
        }

        .div2, .section-to-print * {
            visibility: visible;
            margin-top: 0px;
            padding-top: 0px;
        }

        .section-to-print {
            /*position: absolute;*/
            /*left: 0;
            top: 0;*/
        }
    }

</style>
</head>

<body class="hold-transition skin-blue sidebar-mini">




  <div class="wrapper">
            <div class="no-print">
              <%= render 'layouts/header' %>
            </div>
    <!-- Content Wrapper. Contains page content -->
              <div class="content-wrapper">

      <!-- Content Header (Page header) -->
                    <section class="content-header">
        

                        <h1>       
                                  <small>
                                          <% if current_user.cmisuser != "YES" %>
                                                <% if current_user.stationname.present? %>
                                                        <font color="green">At: <%= current_user.stationname %> </b></font>
                                                <% else %>
                                                        <p><div class="no-print"> <font color ="red">Please Click On Edit Profile To Select Station Name</font></div></p>
                                                <% end %>
                                          <% end %>

                                  </small>  
                        </h1>


                                                <ol class="breadcrumb">
                                                  <li class="active">
                                                    <div class="no-print">
                                                    <a href="#">
                                                      <i class="fa fa-home"></i>
                                                      Home Page</a>
                                                    </div>
                                                  </li>
                                                </ol>
                        </section>

      <!-- Main content -->
            <section class="content">
              <!-- Small boxes (Stat box) -->
             
              <div class="row div2">
                <div class="col-md-12">

<form action="/orders" method="GET">
  <label for="filter">Filter Options</label>
  <select id="filter" name="filter" onchange="this.form.submit()">
    <option value="">Pick a Filter Option</option>
    <option value="station" <%= "selected" if session[:filter] == "station" %>>Filter by Station-Test</option>
    <option value="section" <%= "selected" if session[:filter] == "section" %>>Filter by Station</option>
  </select>


  <% if session[:filter] == "station" %>
    <select name="filter_option" onchange="this.form.submit()">
      <option value="">Pick a Position</option>
      <option value="QB">Quarterbacks</option>
      <option value="RB">Running Backs</option> 
      <option value="WR">Wide Recievers</option>
      <option value="TE">Tight Ends</option>
      <option value="K">Kickers</option>
      <option value="DEF">Defenses</option>
    </select>

  <% elsif session[:filter] == "section" %>
    <select name="filter_option" onchange="this.form.submit()">
      <option value="">Choose Station</option>

      <% @orders.each do |report| %>

        <option value="<%= report.member.name %>"><%= report.member.name %></option>
       

      <% end %>
    </select>
  <% end %>
</form>

<%= link_to "Clear Filter Options", clear_path %><br>

              <div class="box-body">
                    <div class="table-responsive fix-table-height">
                <table id="example1" class="table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Requisition Number</th>
                      <th>Category</th>
                      <th>Name</th>
                      <th>serial</th>
                     <th>Deployed By</th>
                     <th>Deployed On</th>
                     
                  
                      
                    </tr>
                  </thead>
                   <tbody>

<% @orders.each do |report| %>


    <% if report.section == session[:filter_option] %>  
  

 
  <tr>
<td><%= link_to "#{report.requisitionnumber}", report%> </td>
<td><%= link_to "#{report.item.category}", report%></td>
<td><%= link_to "#{report.item.name} ", report%></td>
<td><%= link_to "#{report.item.serial} ", report%></td>
<td><%= link_to "#{report.deployedby}", report%></td>
<td><%= link_to "#{report.created_at}", report%></td>


        </tr></tbody>
       <% end %>


  <% end %> </table>

</div></div>
 </div></div>
                  <div class="box">

                    <% if current_user.cmisuser=="YES" %>
                        <div class="box-header with-border no-print">
                          <h3 class="box-title"><%= @active.count %> Item(s) are Currently Deployed</h3>
                        </div>
                        <% end %>
                    <!-- /.box-header -->
                    <div class="box-body">
                      <div class="no-print">
                       Deployed Items <br><%= link_to 'PRINT', 'your_link_here', :onclick => 'window.print();return false;'%>
                <i class="fa fa-user-plus"></i>

                <br>

                <%= link_to "Export Deployed Items as a Spreadsheet", orders_path(format: "xlsx") %><br><br>
                      </div>

                      <div class="table-responsive fix-table-height">

                           <table id="example1" class="table-bordered table-striped">
                              <thead>
                              <tr>
                             <th>Order ID</th>
                              <th>Item ID</th>
                               <th>Receipt Number</th>
                            <th>Category</th>
                             <th>Name</th>
                               <th>Service Tag/Serial#</th>
                            <th>Quantity</th>
                            <th>Requisition Number</th>
                            <th>Deployed By:</th>
                             <th>Created At:</th>
                            
                          
                            
                            <th>Deployed To</th>
                            <th>Condemn</th>
                           
                                      <% if current_user.cmisuser == "YES" %>
                                                      <th>
                                                        Service/Return
                                                      </th>
                                                   
                                                      <th>
                                                        <i class="ion ion-loop"></i>
                                                      </th>
                                               <% if current_user.admin?%> 
                                                        <th>
                                                          <i class="ion ion-trash-b"></i>
                                                        </th>
                                               <% end %>
                                     <% end %>
                          </tr>
                        </thead>
                        <tbody>
                          <% @active.each do |order| %>
                              
                                  <% if current_user.stationname == order.section || current_user.cmisuser == "YES" %>
                                                          <tr>
                                                             <td align="center">
                                                              <%= order.id %>
                                                            </td>
                                                                 <td align="center">
                                                              <%= order.item.id %>
                                                            </td>
                                                            <td align="center">
                                                              <%= order.item.receipt %>
                                                            </td>
                                                            <td align="center">
                                                              <%= order.item.category %>
                                                            </td>
                                                                <td align="center">
                                                              <%= order.item.name %>
                                                            </td>
                                                             <td align="center"><%= order.item.serial %></td>
                                                                  <td align="center">
                                                              <%= order.quantity %>
                                                            </td>
                                                             <td align="center">
                                                              <%= order.requisitionnumber %>
                                                            </td>
                                                             <td align="center">
                                                              <%= order.deployedby %>
                                                            </td>
                                                              <td align="center">
                                                              <%= order.created_at %>
                                                            </td>
                                                        
                                                           
                                                          
                                                            <td align="center">
                                                              <%= order.member.name %>
                                                            </td>
                                                               <td align="center">
                                                              <%= order.condemn %>
                                                            </td>
                                                         
                                                   <% if current_user.cmisuser == "YES" %>

                                                            
                                                                          <td align="center">
                                                                            <%= link_to "", { :controller => :orders, :action => :disable, data: { confirm: 'Are you sure you want to delete this alert?' }, :id => order.id }, { class: "ion ion-log-in"} %>
                                                                          </td>
                                                                          
                                                                          <td align="center">
                                                                            <%= link_to "", { :controller => :orders, :action => :renew, :id => order.id, }, { class: "ion ion-loop"} %>
                                                                          </td>

                                                                            <% if current_user.admin?%> 
                                                                                          <td align="center">
                                                                                            <%= link_to order, method: :delete, data: { confirm: 'Are you sure? If you are trying to return an item it is recommended to use the "return" button.' } do %>
                                                                                            <i class="ion ion-trash-b"></i>
                                                                                            
                                                                                          </td> 
                                                                            <% end %>
                                                              
                                                     <% end %>
                                    <% end %>
                                 </tr> 
                             <% end %> 


              <% end %>
                        </tbody>
                      </table>
                           </div>
                    </div>
                  </div>
                  <!-- /.box -->
                </div>
                <!-- ./col -->

              
                <!-- ./col -->
              </div>
              <!-- /.row -->
            </section>
      <!-- /.content -->
           






        <div class="no-print">
        <!-- /.content-wrapper -->
        <%= render 'layouts/footer' %>
        </div>



    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>

    <script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
    </script>




</body>
</html>