<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Deployed
          <small>Items</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <!-- Small boxes (Stat box) -->
       
        <div class="row">
          <div class="col-md-12">
            <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title"><%= @active.count %> Item(s) are Currently Deployed</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Category</th>
                      <th>Deployed By</th>
                      <th>Name</th>
                      <th>Service Tag/Serial#</th>
                      
                      <th>Deployed To</th>
                      <th>
                        Service/Return
                      </th>
                    
                      <th>
                        <i class="ion ion-loop"></i>
                      </th>
                      <% if current_user.admin? %>
                      <th>
                        <i class="ion ion-trash-b"></i>
                      </th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @active.each do |order| %>
                    <tr>
                      <td>
                        <%= order.item.category %>
                      </td>
                       <td>
                        <%= order.deployedby %>
                      </td>
                      <td>
                        <%= order.item.name %>
                      </td>
                      <td><%= order.item.serial %></td>
                    
                      <td>
                        <%= order.member.name %>
                      </td>
                      <td align="center">
                        <%= link_to "", { :controller => :orders, :action => :disable, data: { confirm: 'Are you sure you want to delete this alert?' }, :id => order.id }, { class: "ion ion-log-in"} %>
                      </td>
                      <td>
                        <%= link_to "", { :controller => :orders, :action => :renew, :id => order.id }, { class: "ion ion-loop"} %>
                      </td>
                     <% if current_user.admin? %>
                      <td >
                        <%= link_to order, method: :delete, data: { confirm: 'Are you sure? If you are trying to return an item it is recommended to use the "return" button.' } do %>
                        <i class="ion ion-trash-b"></i>
                        <% end %>
                      </td>
                      <% end %>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.box -->
          </div>
          <!-- ./col -->

        >
          <!-- ./col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
    <script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
    </script>
  </body>
