
<html>
<head>
<title> Customs IT Inventory</title>
<style>
table, th, td, tr {
  border: 1px solid black;
  border-collapse: collapse;
  text-align: center;
}
</style>
</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Deployed Items
          <small>

          <% if current_user.cmisuser != "YES" %>
                <% if current_user.stationname.present? %>
                        <font color="green">At: <%= current_user.stationname %> </b></font>
                <% else %>
                        <p> <font color ="red">Please Click On Edit Profile To Select Station Name</font></p>
                <% end %>
          <% end %>

          </small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <!-- Small boxes (Stat box) -->
       
        <div class="row">
          <div class="col-md-12">
            <div class="box">
              <% if current_user.cmisuser=="YES" %>
                  <div class="box-header with-border">
                    <h3 class="box-title"><%= @active.count %> Item(s) are Currently Deployed</h3>
                  </div>
                  <% end %>
              <!-- /.box-header -->
              <div class="box-body">
      <div class="table-responsive fix-table-height">
                <table id="example1" class="table-bordered table-striped">
                  <thead>
                    <tr>
                       <th>Order ID</th>
                      <th>Category</th>
                      <th>Requisition Number</th>
                      <th>Deployed By</th>
                      <th>Name</th>
                      <th>Service Tag/Serial#</th>
                      
                      <th>Deployed To</th>
                      <% if current_user.cmisuser == "YES" %>
                      <th>
                        Service/Return
                      </th>
                   
                      <th>
                        <i class="ion ion-loop"></i>
                      </th>
        <% if current_user.admin?%> 
                      <th>
                        <i class="ion ion-trash-b"></i>
                      </th>
                     <% end %>
                     <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @active.each do |order| %>
                            <% if current_user.stationname == order.section || current_user.cmisuser == "YES" %>
                                <tr>
                                   <td>
                                    <%= order.id %>
                                  </td>
                                  <td>
                                    <%= order.item.category %>
                                  </td>
                                   <td>
                                    <%= order.requisitionnumber %>
                                  </td>
                                   <td>
                                    <%= order.deployedby %>
                                  </td>
                                  <td>
                                    <%= order.item.name %>
                                  </td>
                                  <td><%= order.item.serial %></td>
                                
                                  <td>
                                    <%= order.member.name %>
                                  </td>
                                    <% if current_user.cmisuser == "YES" %>

                                      <% if order.item.consumable != "Yes" %>  
                                            <td align="center">
                                              <%= link_to "", { :controller => :orders, :action => :disable, data: { confirm: 'Are you sure you want to delete this alert?' }, :id => order.id }, { class: "ion ion-log-in"} %>
                                            </td>
                                            
                                            <td>
                                              <%= link_to "", { :controller => :orders, :action => :renew, :id => order.id, }, { class: "ion ion-loop"} %>
                                            </td>

                                                  <% if current_user.admin?%> 
                                                  <td>
                                                    <%= link_to order, method: :delete, data: { confirm: 'Are you sure? If you are trying to return an item it is recommended to use the "return" button.' } do %>
                                                    <i class="ion ion-trash-b"></i>
                                                    
                                                  </td> 
                                                  <% end %>
                                      <% end %>
                                      <% end %>
                              <% end %>
                           </tr> 
                    <% end %> 


        <% end %>
                  </tbody>
                </table>
              </div>
              </div>
            </div>
            <!-- /.box -->
          </div>
          <!-- ./col -->

        
          <!-- ./col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
  </div>
    <script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
    </script>
  </body>
