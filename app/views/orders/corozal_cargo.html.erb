
<html>

<head>
<title> Customs IT Inventory</title>


<style type="text/css">
@media print
{
body {
            margin: 5px;
        }

        .body.{
            padding-top: 0px;
        }

        .no-print {
            display: none;
        }

        .div2, .section-to-print * {
            visibility: visible;
            margin-top: 0px;
            padding-top: 0px;
        }

        .section-to-print {
            /*position: absolute;*/
            /*left: 0;
            top: 0;*/
        }
    }

</style>
</head>

<body class="hold-transition skin-blue sidebar-mini">




  <div class="wrapper">
            <div class="no-print">
              <%= render 'layouts/header' %>
            </div>
    <!-- Content Wrapper. Contains page content -->
              <div class="content-wrapper">

      <!-- Content Header (Page header) -->
               <section class="content-header">
        

                        <h1>       
                                  <small>
                                                       <font color="green">Items Deployed at Corozal-Cargo </b></font>
                                              
                                                     
                                  </small>  
                        </h1>


                                                <ol class="breadcrumb">
                                                  <li class="active">
                                                    <div class="no-print">
                                                    <a href="#">
                                                      <i class="fa fa-home"></i>
                                                      Home Page</a>
                                                    </div>
                                                  </li>
                                                </ol>
                        </section>
      <!-- Main content -->
            <section class="content">
              <!-- Small boxes (Stat box) -->
             
              <div class="row div2">
                <div class="col-md-12">
                  <div class="box">
                  
                       
                    <!-- /.box-header -->
                    <div class="box-body">
                      <div class="no-print">
                       Deployed Items <br><%= link_to 'PRINT', 'your_link_here', :onclick => 'window.print();return false;'%>
                <i class="fa fa-user-plus"></i>

                <br>

                <%= link_to "Export Deployed Items as a Spreadsheet", orders_path(format: "xlsx") %><br><br>
                      </div>

                      <div class="table-responsive fix-table-height">

                           <table id="example1" class="table-bordered table-striped">
                              <thead>
                              <tr>
                             <th>Order ID</th>
                              <th>Item ID</th>
                               <th>Receipt Number</th>
                            <th>Category</th>
                             <th>Name</th>
                               <th>Service Tag/Serial#</th>
                            <th>Quantity</th>
                            <th>Requisition Number</th>
                            <th>Deployed By:</th>
                             <th>Created At:</th>
                            
                          
                            
                            <th>Deployed To</th>
                            <th>Condemn</th>
                           
                                                 
                          </tr>
                        </thead>
                        <tbody>
                          <% @active.each do |order| %>
                              
                                  <% if order.section == "Corozal-Cargo" %>
                                                          <tr>
                                                             <td align="center">
                                                              <%= order.id %>
                                                            </td>
                                                                 <td align="center">
                                                              <%= order.item.id %>
                                                            </td>
                                                            <td align="center">
                                                              <%= order.item.receipt %>
                                                            </td>
                                                            <td align="center">
                                                              <%= order.item.category %>
                                                            </td>
                                                                <td align="center">
                                                              <%= order.item.name %>
                                                            </td>
                                                             <td align="center"><%= order.item.serial %></td>
                                                                  <td align="center">
                                                              <%= order.quantity %>
                                                            </td>
                                                             <td align="center">
                                                              <%= order.requisitionnumber %>
                                                            </td>
                                                             <td align="center">
                                                              <%= order.deployedby %>
                                                            </td>
                                                              <td align="center">
                                                              <%= order.created_at %>
                                                            </td>
                                                        
                                                           
                                                          
                                                            <td align="center">
                                                              <%= order.member.name %>
                                                            </td>
                                                               <td align="center">
                                                              <%= order.condemn %>
                                                            </td>
                                       
                                    <% end %>
                                 </tr> 
                             <% end %> 


        
                        </tbody>
                      </table>
                           </div>
                    </div>
                  </div>
                  <!-- /.box -->
                </div>
                <!-- ./col -->

              
                <!-- ./col -->
              </div>
              <!-- /.row -->
            </section>
      <!-- /.content -->
            </div></div>


        <div class="no-print">
        <!-- /.content-wrapper -->
        <%= render 'layouts/footer' %>
        </div>



    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>

    <script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
    </script>




</body>
</html>