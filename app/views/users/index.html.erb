 
<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Add ASYCUDA WORLD User
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Add user</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <% if current_user.admin? %>
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>


              <script>
   $(document).ready(function() {
    $('#username').change(function() {
       $.ajax({
         url: "<%= username_path %>",
         data: {
          username: $("#username option:selected").text()
            },
         dataType: "script",
         
       });
     });
   });
</script>


<p id="notice"> <%= notice %> </p>

<%= select_tag "username", options_for_select(User.all.map{|c| [c.name, c.email]}), {:id=>"username"} %>




<div id= "result_div">
  <h4> New User To Add </h4>
</div>

<br>
              <!-- /.box-header -->
              <!-- form start -->
                    <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">

              <!-- /.box-header -->
              <div class="box-body">
                    <div class="table-responsive fix-table-height">
                <table id="example1" class="table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
            
                      
                      <% if current_user.admin? %>
                      <th>Edit</th>
                      <th>Delete</th>
                      <% end %>
                      <th>Deploy user</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                   
                                     <tr>
                     <td><%= user.name %></td>
                      <td><%= user.email %></td>
                
                      
                      
                      <% if current_user.admin? %>
                      <td><%= link_to 'Edit', edit_user_path(user) %></td>
                      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
                      <% end %>

                      <td><%= link_to 'Deploy', new_order_path(user: user.id) %></td>
                    </tr>
                    <% end %>
                    
                  </tbody>
                </table>
              </div>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>
      </section>
            </div>


            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>

        <% else %>

        <h3 align="center"> Add user Not Acessible </h3>
        <!-- /.row -->
         <% end %>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b>
        0.1
      </div>
      Content available under
      <a href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0</a>.
    </footer>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
  </body>
