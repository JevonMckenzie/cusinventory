 
<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Add ASYCUDA WORLD User
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Add Item</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <% if current_user.admin? %>
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <script>
   $(document).ready(function() {
    $('#username').change(function() {
       $.ajax({
         url: "<%= username_path %>",
         data: {
          username: $("#username option:selected").text()
            },
         dataType: "script",
         
       });
     });
   });
</script>


<p id="notice"> <%= notice %> </p>

<%= select_tag "username", options_for_select(User.all.map{|c| [c.email, c.email]}), {:id=>"username"} %>


<div id= "result_div">
  <h4> New User To Add </h4>
</div>
<br>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for Awuser.new do |f| %>
            
              <div class="box-body">

                       <div class="form-group">
                  <label>Username</label>
                  <%= f.text_field :user_id, class: "form-control", placeholder: "Enter user to be added to ASYCUDA", required: true  %>
                </div>

              
              <!-- /.box-body -->
              <div class="box-footer">
                <%= f.submit "Submit", class: "btn btn-primary"%>
              </div>
              <% end %>
             
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>

        <% else %>

        <h3 align="center"> Add Item Not Acessible </h3>
        <!-- /.row -->
         <% end %>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b>
        0.1
      </div>
      Content available under
      <a href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0</a>.
    </footer>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
  </body>
