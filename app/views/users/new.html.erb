<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Add User
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page
            </a>
          </li>
          <li class="active">Station Name</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <% if current_user.admin? %>
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="row">
                <div class="col-md-12">
                  <h2 class="text-center">SignUp</h2>
                  <div class="box-header with-border">
                    <h3 class="box-title">Basic Information</h3>
                  </div>
                </div>
              </div>

              <%= form_for @user do |f| %> <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this item from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>

              <div class="container" style="margin-top: 20px;">
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <%= f.label :name %> <%= f.text_field :name ,class: "form-control"%>
                      </div>
                      <div class="form-group">
                        <%= f.label :email %> <%= f.email_field :email, autofocus: true ,class: "form-control"%>
                      </div>
                      <div class="form-group">
                        <%= f.check_box :admin ,class: "form-control form-check-input"%> 
                        <%= f.label :Admin ,class:"form-check-label" %> 
                      </div>
                    <div class="field">
                      <%= f.label :password %> <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off" ,class: "form-control" %>
                    </div>

                    <div class="field">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control" %>
                    </div>
                  </div>

                  <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Account Type</label>
                        <%= f.collection_select :acctcode, Acctype.all, :acctcode, :description ,class: "form-control" %>
                      </div>
                      <div class="form-group">
                        <label>Rank</label>
                        <%= f.collection_select :rankcode, Orank.all, :rankcode, :description ,class: "form-control" %>
                      </div>
                      <div class="form-group">
                        <label>Asycuda World Function Type</label>
                        <%= f.collection_select :asyfxn_user, Asyfxn.all, :asyfxn, :description ,class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Station</label>
                        <%= f.collection_select :stncode, Custation.all, :stncode, :description ,class: "form-control" %>
                      </div>
                      <div class="form-group">
                        <label>Section</label>
                        <%= f.collection_select :secode, Cusection.all, :secode, :description ,class: "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="actions form-group text-center" style="margin-top: 15px;" >
                        <%= f.submit "Sign up" ,class: "btn", style: "background-color: #3c8dbc; color: white;" %>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box -->
        </div>
        <!--/.col (right) -->

        <% else %>

        <h3 align="center">Add Item Not Acessible</h3>
        <!-- /.row -->
        <% end %>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b>
        0.1
      </div>
      Content available under
      <a href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0</a>.
    </footer>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge("uibutton", $.ui.button);
    </script>
  </div>
</body>
