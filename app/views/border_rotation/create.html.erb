<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <%= render 'layouts/header' %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
        <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>Create New Record</h1>
                <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Home Page</a>
                </li>
                <li ><a href="">Rotation</a></li>
                <li class="active">Create Records</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-4">
                        <ul class="nav nav-tabs style-1" id="tabs" role="tablist">
                        <li class="active nav-item"><a class="nav_links nav-link btn" data-toggle="tab" href="#imports" role="tab">Imports</a></li>
                        <li class="nav-item"><a data-toggle="tab" class="nav_links nav-link btn" href="#exports" role="tab">Exports</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="imports">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <!-- Main data table -->
                                        <div class="box">
                                        <!-- /.box-header -->
                                        <div class="box-body">
                                            <div class="table-responsive fix-table-height">
                                                <%=  form_for @border_rotation_export, url: rotation_create_path, method: :post, local: true do |f|%>
                                                    <div class="form-group">
                                                        <lable>Importer Name: </lable><%= f.text_field :exporter_name, class: "form-control", placeholder: "Importer Name"%>
                                                        <lable>Vehicle Color: </lable><%= f.text_field :vehicle_color, class: "form-control", placeholder: "Vehicle Color"%>
                                                        <lable>ROT#: </lable><%= f.text_field :rot_num, class: "form-control", placeholder: "ROT#"%>
                                                        <lable>Date: </lable><%= f.date_field :current_date, class: "form-control", placeholder: "Date"%>
                                                        <lable>Time: </lable><%= f.time_field :current_time, class: "form-control", placeholder: "Time"%>
                                                        <lable>Goods Desc: </lable><%= f.text_field :goods_description, class: "form-control", placeholder: "Goods Desc"%>
                                                        <lable>License Number: </lable><%= f.text_field :license_num, class: "form-control", placeholder: "License Number"%>
                                                        <lable>Entry: </lable><%= f.text_field :entry, class: "form-control", placeholder: "Entry"%>
                                                        <%= f.submit "Submit", class: "btn btn-primary"%>
                                                    </div>
                                                <% end %>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="exports">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <!-- Main data table -->
                                        <div class="box">
                                        <!-- /.box-header -->
                                        <div class="box-body">
                                            <div class="table-responsive fix-table-height">
                                                <%=  form_for @border_rotation_import, url: rotation_create_path, method: :post, local: true do |f|%>
                                                    <div class="form-group">
                                                        <lable>Exporter Name: </lable><%= f.text_field :importer_name, class: "form-control", placeholder: "Exporter Name"%>
                                                        <lable>Vehicle Color: </lable><%= f.text_field :vehicle_color, class: "form-control", placeholder: "Vehicle Color"%>
                                                        <lable>ROT#: </lable><%= f.text_field :rot_num, class: "form-control", placeholder: "ROT#"%>
                                                        <lable>Date: </lable><%= f.date_field :current_date, class: "form-control", placeholder: "Date"%>
                                                        <lable>Time: </lable><%= f.time_field :current_time, class: "form-control", placeholder: "Time"%>
                                                        <lable>Goods Desc: </lable><%= f.text_field :goods_description, class: "form-control", placeholder: "Goods Desc"%>
                                                        <lable>License Number: </lable><%= f.text_field :license_num, class: "form-control", placeholder: "License Number"%>
                                                        <lable>Entry: </lable><%= f.text_field :entry, class: "form-control", placeholder: "Entry"%>
                                                        <%= f.submit "Submit", class: "btn btn-primary"%>
                                                    </div>
                                                <% end %>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>