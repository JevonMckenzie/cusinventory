<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Add Supervisor
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Supervisors</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <% if current_user.admin? %>
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for @supname do |f| %>
              <% if @supname.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@supname.errors.count, "error") %>
                  prohibited this item from being saved:</h2>
                <ul>
                  <% @supname.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
              <div class="box-body">

                       <div class="form-group">
                  <label>Supervisor's User ID</label>
                  <%= f.number_field :user_id, class: "form-control", placeholder: "User ID of Supervisor"%>
                </div>

                          <label>Supervisor Name</label>
                   <%= f.select :supcode, User.all.map{|c| [c.name, c.id]}, :prompt => "Select One" %>

                  </div>
                  <%= f.number_field :user_id, :value => params[:user], :hidden => true %>
                </div>



                        <div class="form-group">
                  <label>Supervisor Code</label>
                  <%= f.text_field :supcode, class: "form-control", placeholder: "Supervisor's Code", required: true  %>
                </div>

                          
              <!-- /.box-body -->
              <div class="box-footer">
                <%= f.submit "Submit", class: "btn btn-primary"%>
              </div>
              <% end %>
             
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>

        <% else %>

        <h3 align="center"> Add Item Not Acessible </h3>
        <!-- /.row -->
         <% end %>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b>
        0.1
      </div>
      Content available under
      <a href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0</a>.
    </footer>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
  </body>
